@model MVC_Kutuphane_Otomasyonu.Entities.Model.Kullanicilar
@{
    ViewBag.Title = "Login";
    Layout = null;


}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <title>Admincast bootstrap 4 &amp; Kütüphane Otomasyonu | Login</title>

    <link href="~/AdminDashboard/admincast-master/html/dist/assets/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/AdminDashboard/admincast-master/html/dist/assets/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/AdminDashboard/admincast-master/html/dist/assets/vendors/themify-icons/css/themify-icons.css" rel="stylesheet" />
    <link href="assets/css/main.css" rel="stylesheet" />
    <link href="~/AdminDashboard/admincast-master/html/dist/assets/css/pages/auth-light.css" rel="stylesheet" />
</head>
<body class="bg-silver-300">
    <div class="content">
        <div class="brand">
            <a class="link" href="/Kitaplar/Index">Kütüphane Otomasyonu</a>
        </div>

        <!-- action + token + doğru name'ler -->
        <form id="login-form" action="@Url.Action("Login","Kullanicilar")" method="post" autocomplete="off">
            @Html.AntiForgeryToken()

            <h2 class="login-title">Log in</h2>

            <div class="form-group">
                <div class="input-group-icon right">
                    <div class="input-icon"><i class="fa fa-envelope"></i></div>
                    <input class="form-control" type="email" name="Email" placeholder="Email" />
                </div>
            </div>

            <div class="form-group">
                <div class="input-group-icon right">
                    <div class="input-icon"><i class="fa fa-lock font-16"></i></div>
                    <input class="form-control" type="password" name="Sifre" placeholder="Şifre" />
                </div>
            </div>

            <div class="form-group d-flex justify-content-between">
                <label class="ui-checkbox ui-checkbox-info">
                    <input type="checkbox">
                    <span class="input-span"></span>Beni Hatırla
                </label>
                <a href="SifremiUnuttum">Şifremi Unuttum?</a>
            </div>

            <div class="form-group">
                <p class="text-danger">@ViewBag.error</p>
            </div>

            <div class="form-group">
                <button class="btn btn-info btn-block" type="submit">Giriş</button>
            </div>

            <div class="social-auth-hr"><span>veya Giriş</span></div>
            <div class="text-center social-auth m-b-20">
                <a class="btn btn-social-icon btn-twitter m-r-5" href="javascript:;"><i class="fa fa-twitter"></i></a>
                <a class="btn btn-social-icon btn-facebook m-r-5" href="javascript:;"><i class="fa fa-facebook"></i></a>
                <a class="btn btn-social-icon btn-google m-r-5" href="javascript:;"><i class="fa fa-google-plus"></i></a>
                <a class="btn btn-social-icon btn-linkedin m-r-5" href="javascript:;"><i class="fa fa-linkedin"></i></a>
                <a class="btn btn-social-icon btn-vk" href="javascript:;"><i class="fa fa-vk"></i></a>
            </div>

            <div class="text-center">
                Üye Değil Misin?
                <a class="color-blue" href="KayitOl">Üye Ol</a>
            </div>
        </form>
    </div>

    <div class="sidenav-backdrop backdrop"></div>
    <div class="preloader-backdrop"><div class="page-preloader">Loading</div></div>

    <script src="~/AdminDashboard/admincast-master/html/dist/assets/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/vendors/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/vendors/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/js/app.js"></script>

    <script>
        $(function () {
            $('#login-form').validate({
                errorClass: "help-block",
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Sifre: {
                        required: true
                    }
                },
                messages: {
                    Email: { required: "Email zorunlu", email: "Geçerli bir email girin" },
                    Sifre: { required: "Şifre zorunlu" }
                },
                highlight: function (e) { $(e).closest(".form-group").addClass("has-error"); },
                unhighlight: function (e) { $(e).closest(".form-group").removeClass("has-error"); }
            });
        });
    </script>
</body>
</html>
