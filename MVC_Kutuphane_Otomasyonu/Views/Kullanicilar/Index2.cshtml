@model MVC_Kutuphane_Otomasyonu.Entities.Model.ViewModel.KullaniciRolViewModel




@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class=" col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kitap Listesi


            </div>
            <div class="ibox-body">
                <table class=" table table-bordered ">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kullanıcı</th>
                            <td>Adı Soyadı</td>
                            <td>Telefon</td>
                            <td>E-mail</td>
                            <td>Kayıt Tarihi</td>
                            <td>İşlemler</td>
                        </tr>


                    </thead>
                    <tbody>
                        @foreach (var kullanici in Model.Kullanicilar)
                        {
                            <tr>
                                <th>@Html.DisplayFor(x => kullanici.Id)</th>
                                <th class="dropdown-btn">@Html.DisplayFor(x => kullanici.KullaniciAdi)</th>
                                <td class="dropdown-container" style="display:none;">
                                    <div class="p-2 border rounded bg-light">
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var rol in kullanici.KullaniciRolleri)
                                            {
                                                <li class="d-flex justify-content-between align-items-center mb-2">
                                                    <span>@rol.Rol.Rol</span>

                                                    <div class="btn-group btn-group-sm" role="group">
                                                        @Html.ActionLink("Düzenle", "Duzenle","KullaniciRolleri", new { id = kullanici.Id },
                                                            new { @class = "btn btn-warning" })
                                                        @Html.ActionLink("Sil", "Sil", "KullaniciRolleri", new { id = kullanici.Id },
                                                            new
                                                            {
                                                                @class = "btn btn-danger delete",
                                                                onclick = "return confirm('Kayıt Silinsin Mi ?')"
                                                            })
                                                    </div>
                                                </li>
                                            }

                                            <li class="mt-2">
                                                @Html.ActionLink("Yeni", "Ekle","KullaniciRolleri", new { id = kullanici.Id },
                                                    new { @class = "btn btn-success btn-sm" })
                                            </li>
                                        </ul>
                                    </div>
                                </td>




                                <td>@Html.DisplayFor(x => kullanici.AdiSoyadi)</td>
                                <td>@Html.DisplayFor(x => kullanici.Telefon)</td>
                                <td>@Html.DisplayFor(x => kullanici.Email)</td>
                                <td>@Html.DisplayFor(x => kullanici.KayitTarihi)</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Duzenle", new { id = kullanici.Id }, new { @class = "btn btn-warning btn-sm" }) |
                                    @Html.ActionLink("Sil", "Sil", "Kullanicilar", new { id = kullanici.Id }, new { @class = "btn btn-danger btn-sm delete", onclick = "return confirm('Kayıt Silinsin Mi ?')" }) 

                                </td>


                            </tr>

                        }


                    </tbody>


                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle","KullaniciRolleri", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/style.css" rel="stylesheet" />
@section Scripts {
    <script src="~/JavaScript.js"></script>
}




