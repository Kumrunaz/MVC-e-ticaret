@model MVC_Kutuphane_Otomasyonu.Entities.Model.Roller




@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">

            <div class="ibox-head">
                Rol Ekleme Sayfası
            </div>

            <div class="ibox-body">


                @using (Html.BeginForm("Ekle", "Roller", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(x => x.Rol)
                        @Html.TextBoxFor(x => x.Rol, new { @class = "form-control", placeholder = "Rol adı girin" })
                        @Html.ValidationMessageFor(x => x.Rol, "", new { @class = "text-danger" })
                    </div>



                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Ekle</button>


                    </div>
                }

            </div>
        </div>
    </div>
</div>
